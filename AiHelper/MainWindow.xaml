<Window x:Class="AiHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AiHelper"
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        Title="AI Helper" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Background="LightGray">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="UseLayoutRounding" Value="True"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="LightGray">
        <DockPanel>
            <GroupBox Header="Einstellungen" DockPanel.Dock="Bottom" Margin="7,3,12,15" BorderBrush="Gray" Background="White">
                <GroupBox.BitmapEffect>
                    <DropShadowBitmapEffect Color="Gray" ShadowDepth="10"/>
                </GroupBox.BitmapEffect>
                <StackPanel>
                    <CheckBox IsChecked="{Binding StayOnTop}" Margin="5,5,0,0" Focusable="False" >
                        <TextBlock Text="Anwendung im Vordergrund halten" />
                    </CheckBox>
                    <Button Content="Konfiguration - Api Key eintellen" Command="{Binding OpenConfigCommand}" HorizontalAlignment="Left" Padding="5,2,5,2" Margin="5,5,0,0"
                            Focusable="False"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Mögliche Aktionen" DockPanel.Dock="Top" Margin="7,3,12,12"  BorderBrush="Gray" Background="White">
                <GroupBox.BitmapEffect>
                    <DropShadowBitmapEffect Color="Gray" ShadowDepth="10"/>
                </GroupBox.BitmapEffect>
                <ItemsControl ItemsSource="{Binding Options}" BorderThickness="0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="White" Background="LightYellow" CornerRadius="5" Padding="10" BorderThickness="1" Margin="7" >                               
                                <Border.BitmapEffect>
                                    <DropShadowBitmapEffect ShadowDepth="5" Color="Black" Softness="1"/>
                                </Border.BitmapEffect>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding KeyText}" FontWeight="Bold" FontSize="20"/>
                                    <TextBlock Text=": " FontWeight="Bold" FontSize="20"/>
                                    <TextBlock Text="{Binding Description}" FontSize="20" />
                                </StackPanel>
                            </Border>                            
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>
            <GroupBox Header="Ausgabe" Margin="7,3,12,12"  BorderBrush="Gray" Background="White">
                <GroupBox.BitmapEffect>
                    <DropShadowBitmapEffect Color="Gray" ShadowDepth="10"/>
                </GroupBox.BitmapEffect>
                                            
                <ScrollViewer x:Name="OutputScrollViewer" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Outputs}" x:Name="OutputDisplay" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Focusable="False">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="5" Padding="10" BorderBrush="Lime" BorderThickness="1" Background="WhiteSmoke" Margin="4" HorizontalAlignment="Left">
                                    <Border.BitmapEffect>
                                        <DropShadowBitmapEffect Color="Lime" ShadowDepth="2" />
                                    </Border.BitmapEffect>
                                    <TextBlock Text="{Binding Text}" TextWrapping="Wrap" FontSize="14" Padding="0" Foreground="Black"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
        </DockPanel>
    </Grid>
</Window>
