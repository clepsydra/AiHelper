<Window x:Class="AiHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AiHelper"
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        Title="AI Helper" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Background="WhiteSmoke">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="UseLayoutRounding" Value="True"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <DockPanel>
            <GroupBox Header="Einstellungen" DockPanel.Dock="Bottom" Margin="3">
                <StackPanel>
                    <CheckBox IsChecked="{Binding StayOnTop}" Content="Anwendung im Vordergrund halten" Margin="5,5,0,0" Focusable="False"/>
                    <Button Content="Konfiguration - Api Key eintellen" Command="{Binding OpenConfigCommand}" HorizontalAlignment="Left" Padding="5,2,5,2" Margin="5,5,0,0"
                            Focusable="False"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Aktionen" DockPanel.Dock="Top" Margin="3">
                <ItemsControl ItemsSource="{Binding Options}" >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Blue" Background="AliceBlue" CornerRadius="5" Padding="10" BorderThickness="1" Margin="5">
                                <Border.BitmapEffect>
                                    <DropShadowBitmapEffect ShadowDepth="5" Color="LightBlue" Softness="10"/>
                                </Border.BitmapEffect>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding KeyText}" FontWeight="Bold" FontSize="20"/>
                                    <TextBlock Text=": " FontWeight="Bold" FontSize="20"/>
                                    <TextBlock Text="{Binding Description}" FontSize="20" />
                                </StackPanel>
                            </Border>                            
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>
            <GroupBox Header="Ausgabe" >
                <ScrollViewer x:Name="OutputScrollViewer">
                    <ItemsControl ItemsSource="{Binding Outputs}" x:Name="OutputDisplay" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Focusable="False">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="5" Padding="10" BorderBrush="Lime" BorderThickness="1" Background="White" Margin="4" HorizontalAlignment="Left">
                                    <Border.BitmapEffect>
                                        <DropShadowBitmapEffect Color="Lime" ShadowDepth="1" />

                                    </Border.BitmapEffect>
                                    <TextBlock Text="{Binding Text}" TextWrapping="Wrap" FontSize="14" Padding="0" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
        </DockPanel>
    </Grid>
</Window>
