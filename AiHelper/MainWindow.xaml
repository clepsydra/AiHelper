<Window x:Class="AiHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AiHelper"
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        Title="AI Helper" Height="700" Width="1000"
        Background="WhiteSmoke">
    
    <Grid>
        <DockPanel>
            <GroupBox Header="Einstellungen" DockPanel.Dock="Bottom" Margin="3">
                <StackPanel>
                    <CheckBox IsChecked="{Binding StayOnTop}" Content="Anwendung im Vordergrund halten" Margin="5,5,0,0"/>
                    <Button Content="Konfiguration - Api Key eintellen" Command="{Binding OpenConfigCommand}" HorizontalAlignment="Left" Padding="5,2,5,2" Margin="5,5,0,0"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Aktionen" DockPanel.Dock="Top" Margin="3">
                <StackPanel DockPanel.Dock="Top">
                    <DockPanel>
                        <CheckBox IsChecked="{Binding ShowImage}" Content="Bild speichern und anzeigen" Margin="5"
                                  DockPanel.Dock="Right" VerticalAlignment="Center"/>
                        <Button Command="{Binding SummarizeImageInOneSentenceComand}" MinWidth="200" FontSize="20" Margin="5" HorizontalContentAlignment="Left"
                                x:Name="SpaceButton">
                            <TextBlock Text="Leertaste: Bild aufnehmen und KURZ zusammenfassen" HorizontalAlignment="Left" Margin="5"/>                        
                        </Button>
                    </DockPanel>

                    <DockPanel>
                        <CheckBox IsChecked="{Binding ShowImage}" Content="Bild speichern und anzeigen" Margin="5"
                            DockPanel.Dock="Right" VerticalAlignment="Center"/>
                        <Button Command="{Binding SummarizeImageComand}" MinWidth="200" FontSize="20" Margin="5" HorizontalContentAlignment="Left">
                            <TextBlock Text="F2: Bild aufnehmen und zusammenfassen" HorizontalAlignment="Left" Margin="5"/>
                        </Button>
                    </DockPanel>

                    <Button Command="{Binding HelpCommand}" MinWidth="200" FontSize="20" Margin="5,20,5,5" HorizontalContentAlignment="Left">

                        <TextBlock Text="F1: Hilfetext vorlesen" HorizontalAlignment="Left" Margin="5"/>
                    </Button>

                </StackPanel>
            </GroupBox>
            <GroupBox Header="Ausgabe">
                <ListView ItemsSource="{Binding Outputs}" x:Name="OutputDisplay" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="5" Padding="10" BorderBrush="LightBlue" BorderThickness="1" Background="AliceBlue" Margin="2">
                                <TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </GroupBox>
        </DockPanel>
    </Grid>
</Window>
